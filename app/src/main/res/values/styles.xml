<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Base application theme. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:typeface">sans</item>

        <item name="android:buttonStyle">@style/Widget.GoIV.Button</item>
        <item name="buttonStyle">@style/Widget.GoIV.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.GoIV.Button.Borderless</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <!-- Here goes any API level specific attribute. -->
    </style>

    <style name="AppTheme.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Widget.GoIV.Toolbar.Title.Transparent" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/transparentWhite</item>
    </style>

    <style name="Widget.GoIV.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.GoIV.Button.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/goiv_btn_colored_borderless_text_material</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PoGoStyleButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:background">@drawable/skin_button</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Main">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Blue" /> <!-- Don't remove! -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title" />
    <style name="NotificationMessage" parent="android:TextAppearance.StatusBar.EventContent" />

</resources>
