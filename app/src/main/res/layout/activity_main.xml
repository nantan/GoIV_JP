<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="com.kamron.pogoiv.activities.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/header"
        android:background="#00ffffff"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:labelFor="@+id/trainerLevel"
                    android:text="@string/trainer_level"
                    android:textSize="18sp"/>

                <NumberPicker
                    android:id="@+id/trainerLevel"
                    android:layout_width="75dp"
                    android:layout_height="100dp"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="end"
                    android:inputType="number"
                    android:textAlignment="center"/>

                <Spinner
                    android:id="@+id/teamPickerSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp">

                </Spinner>


            <Button
                android:id="@+id/start"
                style="@style/PoGoStyleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/welcome_message"
                android:textAlignment="textStart"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goiv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoLink="web"
                    android:padding="16dp"
                    android:text="@string/goiv_is_open_source"/>

                <TextView
                    android:id="@+id/version_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:textAlignment="textEnd"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>